<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/qlpm_adapter_mapm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:hint="Mã phiếu mượn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qlpm_adapter_matt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_mapm"
        android:hint="Mã thủ thư"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/qlpm_adapter_matv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_matt"
        android:hint="Mã thành viên"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/qlpm_adapter_masach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_matv"
        android:hint="Mã sách"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/qlpm_adapter_ngaymuon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:hint="Ngày mượn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_masach" />

    <TextView
        android:id="@+id/qlpm_adapter_trasach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:hint="Trả sách"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_ngaymuon" />

    <TextView
        android:id="@+id/qlpm_adapter_tienthue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:hint="Tiền thuê"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qlpm_adapter_trasach"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/phieumuon_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/edit"
        app:layout_constraintEnd_toStartOf="@+id/phieumuon_delete"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/phieumuon_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/delete"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>